@using SkaiMovies.Models
@using SkaiMovies.Data

<link rel="stylesheet" href="css/app.css" />


@foreach (var movie in movies)
{
	<div class="row filmCategory">
		<section class="col-2 img">
			@if (movie != null)
			{
				<img src="https://image.tmdb.org/t/p/w500/@movie.Poster" alt="Movie Poster" />
			}
		</section>
		<section class="col-10">
			<h3>@movie.Title</h3>
			<p>@movie.Synopsis</p>
		</section>

	</div>
}

<style>
	.filmCategory {
		padding: 10px;
		border-top-style: solid;
		border-top-color: white;
		height: 150px;
		height: auto;
		width: 90%;
		color: white;
		margin: auto;
	}

	.img {
		height: 125px;
	 	display: flex;
	 	width: 15%;
		 margin: auto;
	}

		.img img {
			height: 125px;
		}

	.info{
		display:flex;
		width: 85%;
	}

</style>
@code {
	[Parameter]
	public List<Movie> movies { get; set; }
}


